<% layout('/layouts/layout-candidate-closed') -%>
<section id="AssessmentsApp" class="section section-sm">
	<div class="hero">
		<div class="section pt-5">
			<div class="container">
				<div class="row justify-content-center mb-5">
					<div class="d-flex justify-content-between align-items-center col-7 font-white">
                        <h5 class="mb-0">Interviews</h5>
					</div>
				</div>
			</div>
		</div>
	</div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div id="CandidateInterviews" class="card mb-2 translate-up-100">
                    <div class="card-body">
                        <div class="mb-2 mt-1">
                            <label class="pt-0 mb-2"><strong>Upcoming Interviews</strong></label>
                        </div>  
                        <a  
                        v-for="(item,index) in list"
                        v-on:click.stop.prevent="showItem(item)"
                        href="/candidate/interviews/1212321" class="card card-flat w-100 mb-1">
                            <div class="card-body"> 
                                <div>
                                    <div class="d-flex justify-content-between align-items-center">     
                                        <p class="mb-1"><strong>{{item.title}}</strong></p>
                                    </div>
                                    <div>
                                        <div class="mb-1">
                                            <span class="font-regular font-primary font-gray1">{{item.location}}</span>
                                        </div>
                                        <div class="mb-1">
                                            <span class="font-regular">
                                                {{item.date}}
                                            </span>
                                        </div>
                                    </div> 
                                </div>                     
                            </div>
                        </a>

                        <div v-if="!list.length">
                            <div class="text-center p-3">
                                <div class="avatar avatar-lg">
                                    <i class="fad fa-comment-slash"></i>
                                </div>
                                <div class="mt-2">
                                    No  Inteviews Scheduled at this time
                                </div>
                            </div>
                        </div>
                    </div>
               </div>
                

            </div>
        </div>
    </div>

</section>

<script src="/js/vue.candidate-interviews.js"></script>
